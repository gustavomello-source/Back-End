<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>TODO APP</title>
  </head>
  <body>
    <h1>TODO APP</h1>
    <h2>Tarefas</h2>
    <ul>
      {{#tasks}}
      <div>
          {{name}} (Priority: {{priority}})
          <a href="/tarefas/edit/{{id}}">edit</a>
          <a href="/tarefas/done/{{id}}">done</a>
      </div>
      {{/tasks}}
    </ul>

    <h2>Nova tarefa</h2>
      <form action="/tarefas" method="POST">
          {{#task.id}}<input type="hidden" name="id" value="{{task.id}}">{{/task.id}}
          <input type="text" name="nome" value="{{task.name}}">
          <select name="priority">
              <option value="low">Baixa</option>
              <option value="medium">MÃ©dia</option>
              <option value="high">Alta</option>
          </select>
          <button type="submit">Save</button>
      </form>

    <div style="color: red">{{erro}}</div>

    <a href="/tarefas/alfabetica">View Alphabetical List</a>
    <a href="/tarefas/contagem">View Task Count</a>

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

